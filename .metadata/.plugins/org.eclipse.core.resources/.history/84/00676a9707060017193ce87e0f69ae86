package special;

import java.awt.Color;
import java.awt.Graphics;

public class Paidfire extends Myfire
{
	public Paidfire(){}
	
	public Paidfire(Plane me,int width,int height,)
	{
		this.x=me.x;
		this.y=me.y;
		this.height=height;
		this.width=width;
		this.degree=0;
		this.speed=10;
		this.speedincrease=0;
	}

	public void drawmyself(Graphics g,Plane me)
	{
		if(me.live)
		{
		if(live)
		{
		if(isinframe){
			if(y<0)
			{
				isinframe=false;
				
			}
		c=g.getColor();
		g.setColor(Color.green);
		g.fillOval((int)x+5, (int)y+4, (int)width, (int)height);
		g.fillOval((int)x+9, (int)y+4, (int)width, (int)height);
		y-=speed;
		speed+=speedincrease;
		g.setColor(c);
		}
		}
		}
	}
}
