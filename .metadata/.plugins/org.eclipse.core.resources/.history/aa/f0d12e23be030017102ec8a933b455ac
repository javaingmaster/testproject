package test;

public class Threadtest extends Thread 
{
	public static void main(String[] args)
	{
		Study s=new Study();

		new Thread(s).start();

		int m=0;
		while(true)
		{
			System.out.println("mainmain"+m+"mainmain");
			m++;
		}
	}	
		
		public void run()
		{
		for(int i=0;i<100;i++)
		{
			if(i==50)
			{
				s.join();
			}
		}
		
		}
}

class Study implements Runnable
{
	boolean flag=true;
	int m=0;
	public void run()
	{
		while(flag)
		{
			System.out.println("***ss**"+m+"**sss***");
			m++;
		}
		
	}
	public void stop()
	{		
		this.flag=false;
	}
	
}
class Studytwo implements Runnable
{
	boolean flag=true;
	int m=0;
	public void run()
	{
		while(flag)
		{
			System.out.println("------"+m+"-------");
			m++;
		}
		
	}
	public void stop()
	{		
		this.flag=false;
	}
	
}